    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<p><a href="http://localhost:3287">Back To Main</a></p>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
