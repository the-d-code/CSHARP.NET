@model FurnitureDBCrudMVCCore.Models.SearchByCategoryViewModel

@{
    ViewData["Title"] = "SearchByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SearchByCategory</h1>

<h4>Furniture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchByCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                
                <label asp-for="CategoryId" class="control-label">Category Name:</label>
                <select asp-for="CategoryId"  class="form-control" asp-items="ViewBag.CategoryId"></select>
                
        
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
